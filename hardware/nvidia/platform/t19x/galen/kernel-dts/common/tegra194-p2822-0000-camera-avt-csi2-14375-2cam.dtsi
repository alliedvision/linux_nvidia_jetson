						max_exp_time = "550385"; /* us */
						step_exp_time = "1";
					};
					
					ports {
						#address-cells = <1>;
						#size-cells = <0>;

						port@0 {
							reg = <0>;
							avt_csi2_cam_out4: endpoint {
								port-index = <4>;
								bus-width = <4>;
								remote-endpoint = <&avt_csi2_csi_in4>;
							};
						};
					};
				};
		    };

			i2c@1 {
                reg = <2>;
                i2c-mux,deselect-on-exit;
                #address-cells = <1>;
                #size-cells = <0>;
				
				avt_csi2_f@3c {
					status = "okay";

					clocks = <&bpmp_clks TEGRA194_CLK_EXTPERIPH1>,
							 <&bpmp_clks TEGRA194_CLK_PLLP_OUT0>;
					clock-names = "extperiph1", "pllp_grtba";
					mclk = "extperiph1";
					
					devnode = "video5";
					compatible = "alliedvision,avt_csi2";
					reg = <0x3c>;

					mode0 {
						num_lanes = "4";
						tegra_sinterface = "serial_g";
						discontinuous_clk = "no";
						cil_settletime = "0";
						embedded_metadata_height = "0";

						/* not verified: */
						mclk_khz = "24000";
						phy_mode = "DPHY";
						dpcm_enable = "false";

						active_w = "5488";
						active_h = "4112";
						pixel_t = "bayer_bggr";
						readout_orientation = "0";
						line_length = "5488";
						inherent_gain = "1";
